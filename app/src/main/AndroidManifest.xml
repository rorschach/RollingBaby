    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".network.MessageService"
            android:enabled="true"
            android:exported="false" >
        </service>

        <activity
            android:name=".ui.SoundActivity"
            android:label="@string/title_activity_music"
            android:parentActivityName=".ui.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hl.rollingbaby.ui.HomeActivity" />
        </activity>
        <activity
            android:name=".ui.TemperatureActivity"
            android:label="@string/title_activity_temperature"
            android:parentActivityName=".ui.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hl.rollingbaby.ui.HomeActivity" />
        </activity>
        <activity
            android:name=".ui.SwingActivity"
            android:label="@string/title_activity_swing"
            android:parentActivityName=".ui.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hl.rollingbaby.ui.HomeActivity" />
        </activity>
        <activity
            android:name=".ui.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".ui.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hl.rollingbaby.ui.HomeActivity" />
        </activity>
        <activity
            android:name=".ui.HumidityActivity"
            android:label="@string/title_activity_humidity"
            android:parentActivityName=".ui.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hl.rollingbaby.ui.HomeActivity" />
        </activity>

        <service
            android:name=".network.StatusService"
            android:exported="false" >
        </service>
        <service
            android:name=".network.StatusService"
            android:exported="false" >
        </service>
    </application>

</manifest>
